{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/": ["src/components/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "element-plus/global"],
    "allowJs": true,
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "docs/**/*.ts", "docs/**/*.d.ts", "docs/vite.config.mts"],
  "exclude": ["vite.config.mts"]
}
